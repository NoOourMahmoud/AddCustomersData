<h1> Customers </h1>

<% @customers.each do |customer| %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= customer.name%></h5>
      <p class="card-text">Mobile: <%= customer.mobile%> </p>
      <p class="card-text">Address: <%= customer.address%></p>
      <%= button_to "Edit", customers_edit_path(customer), method: :get, class: "btn btn-outline-danger" %>
      <%= button_to "Delete", customers_path(customer), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-outline-danger" %>
    </div>
  </div>
<% end %>


<%= pagy_bootstrap_nav(@pagy).html_safe %>